<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.VideoCaptureController">
	<top>
		<VBox>
   <children>
   			<HBox alignment="CENTER" spacing="10">
   				<padding>
   					<Insets bottom="5.0" top="5.0" />
   				</padding>
               <children>
                  <Label fx:id="titulo" text="Reconocimiento Facial">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
               </children>
   			</HBox>
   			<Separator />
   </children>
		</VBox>
	</top>
	<center>
		<VBox alignment="CENTER">
			<padding>
				<Insets left="10" right="10" />
			</padding>
   <children>
   			<ImageView fx:id="originalFrame" />
   </children>
		</VBox>
	</center>
	<bottom>
		<HBox alignment="CENTER">
			<padding>
				<Insets bottom="25" left="25" right="25" top="25" />
			</padding>
   <children>
   			<Button fx:id="cameraButton" alignment="center" disable="false" onAction="#startCamera" text="Iniciar Camara" />
            <Button fx:id="inicio" mnemonicParsing="false" onAction="#inicio" text="Regresar">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="entrenador" disable="true" mnemonicParsing="false" onAction="#training" text="Entrenar">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <Label fx:id="hola">
               <font>
                  <Font size="14.0" />
               </font>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </Label>
   </children>
		</HBox>
	</bottom>
</BorderPane>
